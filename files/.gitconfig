[user]
	name = Piotr Betkier
	email = pbetkier@gmail.com
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[color "branch"]
    current = green bold
    local = green
    remote = red bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red
[color "sh"]
    branch = yellow
[push]
    default = current
[help]
	autocorrect = 1
[alias]
    ci = commit --verbose
    st = status
    di = diff
    a = add
    pl = pull
    ph = push
    hist = log --pretty=format:'%Cred%h%Creset %C(bold blue)<%an>%Creset%C(yellow)%d%Creset %Cgreen(%cr)%Creset%n%w(80,8,8)%s' --graph
    llog = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=iso
[core]
	excludesfile = ~/.gitignore_global
[init]
	templatedir = /Users/piotr.betkier/.git-templates
